<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		                   http://www.springframework.org/schema/beans
		                   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<import resource="classpath:jdomodels-import.xml" />
	<import resource="stack-configuration.spb.xml" />
	<import resource="id-generator.spb.xml" />

	<!-- Used to test node locking -->
	<bean id="nodeLockerA"
		class="org.sagebionetworks.repo.model.jdo.JDONodeLockCheckerImpl"
		scope="prototype" />

	<!-- Used to test node locking -->
	<bean id="nodeLockerB"
		class="org.sagebionetworks.repo.model.jdo.JDONodeLockCheckerImpl"
		scope="prototype" />

	<bean id="ConnectionFactory" class="org.sagebionetworks.repo.model.dbo.dao.table.ConnectionFactoryStub"/>
	<bean id="RowCacheDao" class="org.sagebionetworks.dynamo.dao.rowcache.RowCacheDaoStub"/>

	<bean id="testCountingSemaphore" class="org.sagebionetworks.repo.model.dbo.dao.semaphore.CountingSemaphoreDaoImpl">
		<property name="lockTimeoutMS" value="1000"/>
		<property name="maxCount" value="10"/>
	</bean>

</beans>
