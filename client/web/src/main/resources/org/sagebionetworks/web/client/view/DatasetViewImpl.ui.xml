<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
	<ui:style>
		.title {
			font-size: 2em;
			font-weight: bold;
			color: #777777;
			margin: 10px 20px 10px;
			text-align: left;
		}
		
		.topTable {
			padding: 10px;
			cellspacing: 50px;
		}
		
		.oneThird {
			width: 350px;
		}
		
		.rowTop {
			vertical-align: top;
		}
	</ui:style>
	
	 <ui:with field='icons' type='org.sagebionetworks.web.client.IconsImageBundle'/>
	 
	<g:HTMLPanel>
		<div class="{style.title}">
			<span ui:field="titleSpan" />
		</div>
		<hr />
		<table class="{style.topTable}">
			<tr class="{style.rowTop}">
				<td>
					<div class="{style.oneThird}">
						<body>
							<h3>Overview</h3>							
							<g:FlowPanel ui:field="overviewPanel" />							
						</body>
					</div>
				</td>
				<td>
					<div class="{style.oneThird}">
						<g:FlexTable ui:field="middleFlexTable" />
					</div>
				</td>
				<td>
					<div class="{style.oneThird}">
						<g:FlexTable ui:field="rightFlexTable" />
					</div>
				</td>
			</tr>
		</table>
		<hr />
		<table class="{style.topTable}">
			<tr class="{style.rowTop}" valign="top">
				<td>
					<div class="{style.oneThird}">
						<g:VerticalPanel>					
							<g:HTML>
								<h3>Dataset Layers</h3>
								<p>Select a name to view smaple data. 
								<span ui:field="downloadSpan"/></p>
							</g:HTML>							
							<g:SimplePanel ui:field="tablePanel" />												
							<g:SimplePanel ui:field="downloadPanel" />
						</g:VerticalPanel>
					</div>
				</td>
				<td>
					<div class="{style.oneThird}">
						<h3>Conversations and events <br/>for this dataset</h3>
					</div>
				</td>
				<td>
					<div class="{style.oneThird}">
						<h3>Projects using this dataset</h3>
					</div>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder>