<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
		                   http://www.springframework.org/schema/beans
		                   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config />

  <import resource="classpath:managers-spb.xml" />
                    
    <bean id="userDAO" class="org.sagebionetworks.repo.manager.TestUserDAO" scope="singleton"/>
    <bean id="groupMembersDAO" class="org.sagebionetworks.repo.manager.TestGroupMembersDAO" scope="singleton"/>

<!-- 	<bean id="amazonClientFactory" class="org.sagebionetworks.repo.util.MockAmazonClientFactory"  scope="singleton"/> -->
        
    <!-- Provides users for testing. -->
    <bean id="testUserProvider" class="org.sagebionetworks.repo.web.util.UserProviderImpl" scope="singleton"/>
    
    <!--  We do not want to publish to the repository change topic while running test so we turn it off -->
	<bean id="stackConfiguration.shouldMessagesBePublishedToTopic" class="java.lang.Boolean">
	    <constructor-arg value="false" />
	</bean>
</beans>
