<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		                   http://www.springframework.org/schema/beans
		                   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<import resource="classpath:repository-servlet.xml" />

	<bean id="helper" class="org.sagebionetworks.repo.web.controller.Helpers"
		scope="prototype" />

	<bean id="testHelper"
		class="org.sagebionetworks.repo.web.controller.ServletTestHelper"
		scope="prototype" />
	<bean id="entityServletHelper"
		class="org.sagebionetworks.repo.web.controller.EntityServletTestHelper"
		scope="prototype" />

	<bean id="userDAO" class="org.sagebionetworks.repo.manager.TestUserDAO"
		scope="singleton" />

	<!-- Provides users for testing. -->
	<bean id="testUserProvider" class="org.sagebionetworks.repo.web.util.UserProviderImpl"
		scope="singleton" />

	<!-- We do not want to publish to the repository change topic while running 
		test so we mock the AmazonSNSClient -->
	<bean id="awsSNSClient" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg value="com.amazonaws.services.sns.AmazonSNSClient" />
	</bean>
</beans>
